{
  "name": "planningos",
  "version": "0.1.0",
  "private": true,
  "description": "PlanningOS - Workforce Scheduling Platform",
  "author": "PlanningOS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fs0ciety7000/PlanningOs.git"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@planningos/web",
    "dev:desktop": "turbo run dev --filter=@planningos/desktop",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@planningos/web",
    "build:desktop": "turbo run build --filter=@planningos/desktop",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "playwright test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd packages/api && sqlx migrate run",
    "db:seed": "psql $DATABASE_URL -f packages/db/src/seeds/001_initial_data.sql",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.10.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.0",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
